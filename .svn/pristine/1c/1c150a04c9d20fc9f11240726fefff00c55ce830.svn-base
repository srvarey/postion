    public DateEditorPanel(Object value) {
        initComponents();
        for (int i=900;i>=0;i--){
            dayPlusComboBox.addItem(i);
        }
        dayPlusComboBox.addItem(null);
        for (int i=-1;i>=-900;i--){
            dayPlusComboBox.addItem(i);
        }
        dayPlusComboBox.setSelectedIndex(901);
        if (value!=null){
            if (value instanceof Integer){
                dayPlusComboBox.setSelectedItem(value);
            } else if (value instanceof String && value!=null){
                try {
                    Date date=dateFormatter.parse(value.toString());
                    jDateChooserDate.setDate(date);
                } catch (Exception e){
                    logger.error(StringUtils.formatErrorMessage(e));
                }
            }
        }
    }

    public Object getValue(){
        if (dayPlusComboBox.getSelectedItem()!=null){
            return dayPlusComboBox.getSelectedItem();
        }
        if (jDateChooserDate.getDate()!=null){
            return jDateChooserDate.getDate();
        }
        return null;
    }

